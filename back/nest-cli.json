{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "docs/ws/**/*.yaml"
      },
      {
        "include": "templates/**/*"
      },
      {
        "include": "mailer/templates/**/*"
      }
    ]
  }
}
